<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffa4dd81"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/valoracion"
        android:id="@+id/textView3"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/idjugador"
        android:id="@+id/textView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10"
        android:id="@+id/tvValoracion"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView3"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:layout_marginRight="5dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignBottom="@+id/tvContrincante"
        android:textSize="50sp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/contrin"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvIdJugador"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvIdJugador"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvContrincante"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp" />

</RelativeLayout>